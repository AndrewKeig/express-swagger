{
  "apiVersion": "1.0",
  "swaggerVersion": "1.2.5",
  "basePath": "http://127.0.0.1:8000",
  "apis": [
    {
      "path": "/lesson/{id}",
      "description": "Get lesson by id parameter",
      "operations": [
        {
          "httpMethod": "GET",
          "summary": "Get a lesson by id parameter",
          "notes": "Returns a lesson based on id",
          "responseClass": "Lesson",
          "nickname": "getLesson",
          "consumes": [
            "application/json"
          ],
          "produces": [
            "application/json",
            "application/xml"
          ],
          "protocols": [
            "http"
          ],
          "authorizations": [
            "authByOAuth"
          ],
          "parameters": [
            {
              "name": "id",
              "description": "Lesson ID",
              "paramType": "path",
              "required": true,
              "dataType": "String"
            },
            {
              "name": "token",
              "description": "Token",
              "paramType": "header",
              "required": true,
              "dataType": "String"
            },
            {
              "name": "appid",
              "description": "appid",
              "paramType": "header",
              "required": true,
              "dataType": "String"
            }
          ],
          "errorResponses": [
            {
              "code": 401,
              "reason": "Unauthorised"
            },
            {
              "code": 400,
              "reason": "Bad Request"
            },
            {
              "code": 500,
              "reason": "Internal server error"
            }
          ]
        }
      ]
    }
  ],
  "resourcePath": "/lesson",
  "models": {
    "Lesson": {
      "id": "Lesson",
      "properties": {
        "title": {
          "type": "String",
          "required": true
        },
        "description": {
          "type": "String"
        },
        "image": {
          "type": "Image"
        },
        "pages": {
          "type": "Array"
        }
      }
    }
  }
}